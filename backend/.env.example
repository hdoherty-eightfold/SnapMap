# API Keys Configuration
# Copy this file to .env and add your actual API keys

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Vector Database Selection
# Options: chromadb, pinecone, weaviate, qdrant, local
VECTOR_DB_TYPE=chromadb

# ChromaDB Settings (default)
CHROMADB_PATH=./vector_db
CHROMADB_PERSIST=true

# Pinecone Settings (optional)
PINECONE_API_KEY=your_pinecone_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=snapmap-embeddings

# Weaviate Settings (optional)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# Qdrant Settings (optional)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# AI Inference Settings
AI_INFERENCE_ENABLED=true
AI_INFERENCE_PROVIDER=gemini
# Options: gemini, openai, anthropic, local

# OpenAI Settings (optional)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4

# Application Settings
MAX_FILE_SIZE_MB=100
DEBUG_MODE=false
